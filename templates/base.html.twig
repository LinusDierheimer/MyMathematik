<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-134811098-1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'UA-134811098-1');
        </script>


        <title>
            {{ title }}
        </title>

        {% if app.environment == 'dev' %}
            <link rel="stylesheet" href="/css/MyMathematik.css"></link>
        {% else %}
            <link rel="stylesheet" href="/css/MyMathematik.min.css"></link>
        {% endif %}

    </head>
    <body>
        
        {% block header %}
            <header class="header" id="header">
                <a href="/" class="title" rel="home">
                    {{ "header.title"|trans }}
                </a>

                <div class="classlinks">
                    {% for class in classes %}
                        <a href="{{ class.href }}">
                            {{ 'header.class'|trans }} {{ class.name }}
                        </a>
                    {% endfor %}
                </div>

            </header>
        {% endblock %}

        {% block fullcontent %}
            <div class="content" id="content">
                {% block content %}{% endblock %}
            </div>            
        {% endblock %}

        {% block footer %}
            <footer class="footer" id="footer">
                <div class="footerlinks">
                    {% for info in informations %}
                        <a href="{{ info.href }}" class="footerlink">
                            {{ info.name|trans }}
                        </a>
                    {% endfor %}
                </div>
            </footer>
        {% endblock %}

        {% block cookies %}
            <div class="cookies" id="cookies">
                <div class="cookiestext">
                    {{ 'cookies.info'|trans }}
                    <a href="{{ informations.cookies.href }}">
                        {{ 'cookies.more'|trans }}
                    </a>
                    <button>
                        ok
                    </button>
                </div>
            </div>
        {% endblock %}

        {% if app.environment == 'dev' %}
            <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
            {#<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>#}
            <script src="/js/MyMathematik.js"></script>
        {% else %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
            {#<script src="https://cdn.jsdelivr.net/npm/vue"></script>#}
            <script src="/js/MyMathematik.min.js"></script>
        {% endif %}
    </body>
</html>
